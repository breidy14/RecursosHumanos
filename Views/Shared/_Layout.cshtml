<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body{
            background-color:#b4cccc!important;
        }
        .fixed-top{
                background-color: #60BDBD!important;
        }
        .navbar {
            margin-bottom: 20px;
             margin-top: 0px;
        }

        .container{
            margin-top: 20px;
        }
    </style>
</head>
<body>
    @*<nav class="navbar navbar-expand-md navbar-dark bg-dark">
            @*<div class="container"><nav class="navbar navbar-dark bg-dark">*@
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark pink scrolling-navbar">
            @Html.ActionLink("Recursos Humanos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Mantenimiento
                    </a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Empleados", "Index", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Departamentos", "Index", "Departamentos", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Cargos", "Index", "Cargos", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Procesos
                    </a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Nominas", "Index", "Nominas", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Salida de Empleados", "Index", "SalidaEmpleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Vacaciones", "Index", "Vacaciones", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Permisos", "Index", "Permisos", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Licencias", "Index", "Licencias", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Informes
                    </a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Nominas", "Index", "Nominas", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Departamentos", "Index", "Departamentos", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Cargos", "Index", "Cargos", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Empleados Activos", "ListarActivos", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Empleados Inactivos", "ListarInactivos", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Entrada Empleados", "ListaEntradas", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Salida Empleados", "ListaSalidas", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Permisos", "ListaP", "Empleados", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>


                <li class="nav-item">
                    @Html.ActionLink("Logout", "Logout", "Acceso", new { area = "" }, new { @class = "nav-link" })
                </li>

            </ul>
        </nav>
        @*</div>*@
    @*</nav>*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Final Programación III</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
